---
import ImageCarousel from "../../components/ImageCarousel.svelte";
import Layout from "../../layouts/Layout.astro";

const images = [
  { src: "/src/assets/images/demo-banner.png", alt: "Demo Banner" },
  { src: "/src/assets/images/user-profile.jpg", alt: "User Profile" },
];
---

<Layout title="Carousel Debug">
  <div class="max-w-screen-lg mx-auto p-4">
    <h1 class="text-4xl font-bold mb-8">Image Carousel Debug Page</h1>
    <ImageCarousel images={images} client:load />
  </div>
</Layout>
